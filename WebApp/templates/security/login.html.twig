{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block crumbs %}
    <li class="breadcrumb-item"><a href="{{ path('landing_page') }}">Accueil</a></li>
    <li class="breadcrumb-item active">Connexion</li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 rounded-bottom fabOrange-light shadow">
                <form method="post" class="p-3">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous etes connectes en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn btn-lg btn-primary mt-3" type="submit">
                        Me connecter
                    </button>
                    <a href="{{ path('app_register') }}" class="btn btn-lg btn-secondary mt-3 float-right">
                        M'inscrire
                    </a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
